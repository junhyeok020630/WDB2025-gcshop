<table class="table table-bordered border-primary table-hover" style="text-align: center;">
    <thead class="table-primary "><th>상품</th><th>상품명</th><th>단가</th><th>구매량</th><th>총금액</th><th>구매일</th><th>취소여부</th>
    </thead> 
    <% for (var i = 0; i < purchases.length; i++) { %>
    <tr>
        <td><img src="<%= purchases[i].image %>" style="width:100px;height:100px; "></td>
        <td><%= purchases[i].name %></td>
        <td><%= purchases[i].price.toLocaleString('ko-KR') %> 원</td>
        <td><%= purchases[i].qty %></td>
        <td><%= purchases[i].total.toLocaleString('ko-KR') %> 원</td>
        <td><%= purchases[i].date %></td>
        <td>
            <% if (purchases[i].cancel == 'Y') { %>
                취소된 상품
            <% } else { %>
                <a href ="/purchase/cancel/<%= purchases[i].purchase_id %>" style="text-decoration: none;" onclick="if(confirm('정말로 취소하시겠습니까?')==false) return false">구매취소</a>
            <% } %>
        </td>
        </tr>
    <% } %>
</table>
<% if (purchases.length == 0) { %>
    <p>구매 상품이 없습니다.</p>
<% } %>