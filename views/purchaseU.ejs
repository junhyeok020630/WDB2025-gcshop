<div class="container">
    <h2>purchase 테이블 수정</h2>
    <form action="/purchaseupdate_process" method="post" >
        <input type="hidden" name="purchase_id" value="<%- purchase[0].purchase_id %>" />
        <div class="mb-3">
            <label class="form-label" for="id_main">고객 </label> 
                <select name="loginid" id="id_main">
                    <% for (var i = 0; i < persons.length; i++) { %>
                        <% if (purchase[0].loginid == persons[i].loginid) { %>
                            <option value="<%= persons[i].loginid %>" selected>
                                <%= persons[i].name %>
                            </option>
                            <% continue; %>
                        <% } %>
                        <option value="<%= persons[i].loginid %>">
                            <%= persons[i].name %>
                        </option>
                    <% } %>
                </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id_main">상품 </label> 
                <select name="prod_id" id="id_main">
                    <% for (var i = 0; i < products.length; i++) { %>
                        <% if (purchase[0].prod_id == products[i].prod_id) { %>
                            <option value="<%= products[i].prod_id %>" selected>
                                <%= products[i].name %>
                            </option>
                            <% continue; %>
                        <% } %>
                        <option value="<%= products[i].prod_id %>">
                            <%= products[i].name %>
                        </option>
                    <% } %>
                </select>
        </div>
        <table>
            <tr>
                <td>
                    <div class="mb-3">
                        <label label class="form-label" for="id">날짜</label> 
                        <input class="form-control" type="text" name="date"  style = "width:300px;" value ="<%= purchase[0].date %>" disabled/>
                        <input type="hidden" name="date" value="<%= purchase[0].date %>" />
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label class="form-label" for="id">가격</label> 
                        <input class="form-control" type="text" name="price" style = "width:300px;" value ="<%= purchase[0].price %>" />
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="mb-3">
                        <label class="form-label" for="id">수량</label> 
                        <input class="form-control" type="text" name="qty" style="width:300px;" value ="<%= purchase[0].qty %>" />
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label class="form-label" for="id">총액</label> 
                        <input class="form-control" type="text" name="total" style="width:300px;" value ="<%= purchase[0].total %>" />
                    </div>
                </td>
            </tr>
        </table>
        <div class="mb-3">
            <label class="form-label" for="id_main">지불여부 </label> 
                <select name="payYN" id="id_main">
                    <% if (purchase[0].payYN == 'Y') { %>
                        <option value="Y" selected>
                            YES
                        </option>
                        <option value="N">
                            NO
                        </option>
                    <% } else { %>
                        <option value="Y">
                            YES
                        </option>
                        <option value="N" selected>
                            NO
                        </option>
                    <% } %>
                </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id_main">취소여부 </label> 
                <select name="cancel" id="id_main">
                    <% if (purchase[0].cancel == 'Y') { %>
                        <option value="Y" selected>
                            YES
                        </option>
                        <option value="N">
                            NO
                        </option>
                    <% } else { %>
                        <option value="Y">
                            YES
                        </option>
                        <option value="N" selected>
                            NO
                        </option>
                    <% } %>
                </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id_main">환불여부 </label> 
                <select name="refund" id="id_main">
                    <% if (purchase[0].refund == 'Y') { %>
                        <option value="Y" selected>
                            YES
                        </option>
                        <option value="N">
                            NO
                        </option>
                    <% } else { %>
                        <option value="Y">
                            YES
                        </option>
                        <option value="N" selected>
                            NO
                        </option>
                    <% } %>
                </select>
        </div>
        <button class="btn btn-outline-primary btn-sm" type="submit">수정</button>
        <a href="/purchaseview"><button class="btn btn-outline-primary btn-sm" type="button">구매 목록 돌아가기</button></a>
    </form>
</div>
