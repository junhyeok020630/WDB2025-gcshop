<table class="table table-bordered">
    <form method="post">
        <tr>
            <td rowspan="5">
                <img src="<%= pDetail[0].image %>" style="width:300px;height:300px;">
            </td>
            <td><%= pDetail[0].name %></td>
        </tr>
        <tr>
            <td>가격 : <%= pDetail[0].price.toLocaleString('ko-KR') %> 원</td>
        </tr>
        <tr>
            <td>브랜드 : <%= pDetail[0].brand %></td>
        </tr>
        <tr>
            <td>
                수량 :
                <input type="number" name="qty" value="1" min="1" max="<%= pDetail[0].stock %>" required>
                <br><br>
                남은 수량 : <%= pDetail[0].stock%>
            </td>
        </tr>
        <tr>
            <td>
                <input type="hidden" name="prod_id" value="<%= pDetail[0].prod_id %>">
                <input type="hidden" name="price" value="<%= pDetail[0].price %>">
                <button class="btn btn-outline-primary btn-sm" formaction="/purchase" type="submit">결재</button>
                <button class="btn btn-outline-primary btn-sm" formaction="/purchase/cart_process" type="submit">장바구니</button>
            </td>
        </tr>
    </form>
</table>
